{% extends 'base.html.twig' %}

{% block title %}Edit Author{% endblock %}

{% block body %}
    <h1>Edit Author</h1>

    <form action="{{ path('author_update', {id:author.id}) }}" method="POST">
        <div class="row">
            <div class="col-md-6">
                <label for="author_name" class="form-label">Name</label>
                <input class="form-control" type="text" name="author_name" value="{{ author.name }}" id="author_name">
                <label for="author_surname" class="form-label">Surname</label>
                <input class="form-control" type="text" name="author_surname" value="{{ author.surname }}"
                       id="author_surname">
                <div class="btn-group mt-2" role="group">
                    <button type="submit" class="btn btn-outline-primary me-2">Save</button>
                    <input type="hidden" name="token" value="{{ csrf_token('') }}"/>
                    <a class="btn btn-outline-dark me-2" href="{{ path('author_index') }}">Back</a>
                </div>
            </div>
            <div class="col-md-6 mt-2">
                {% if errors is defined and errors|length > 0 %}
                    {% include 'errors/validation.html.twig' %}
                {% endif %}
            </div>
        </div>
    </form>

{% endblock %}