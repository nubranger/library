{% extends 'base.html.twig' %}

{% block title %}Create new Author{% endblock %}

{% block body %}
    <h1>Create new Author</h1>

    <form action="{{ path('author_store') }}" method="POST">
        <div class="row">
            <div class="col-md-6">
                <label for="author_name" class="form-label">Name</label>
                <input class="form-control" type="text" name="author_name" id="author_name">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="author_surname" class="form-label">Surname</label>
                <input class="form-control" type="text" name="author_surname" id="author_surname">
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-outline-primary me-2">Add</button>
                    <a class="btn btn-outline-dark me-2" href="{{ path('author_index') }}">Back</a>
                </div>
            </div>
        </div>
    </form>

{% endblock %}